<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${timestamp}-java${java.version}-linux</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/OBsharding-D/bin</directory>
            <outputDirectory>OBsharding-D/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>OBsharding-D</include>
                <include>wrapper*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/OBsharding-D/lib</directory>
            <outputDirectory>OBsharding-D/lib</outputDirectory>
            <includes>
                <include>wrapper.jar</include>
                <include>libwrapper-linux*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/</directory>
            <outputDirectory>OBsharding-D/lib</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/OBsharding-D/conf</directory>
            <outputDirectory>OBsharding-D/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>OBsharding-D/conf</outputDirectory>
            <excludes>
                <exclude>*.xsd</exclude>
                <exclude>log4j*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory>OBsharding-D/</outputDirectory>
            <includes>
                <include>version.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/conf</directory>
            <outputDirectory>OBsharding-D/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/bin</directory>
            <outputDirectory>OBsharding-D/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>*.sh</include>
                <include>*.py</include>
                <include>custom_mysql_ha_logging.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/logs</directory>
            <outputDirectory>OBsharding-D/logs</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
		 <fileSet>
            <directory>${basedir}/algorithm</directory>
            <outputDirectory>OBsharding-D/algorithm</outputDirectory>
        </fileSet>
    </fileSets>

</assembly>
