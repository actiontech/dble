<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${timestamp}-linux</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/dble/bin</directory>
            <outputDirectory>dble/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>dble</include>
                <include>wrapper*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/dble/lib</directory>
            <outputDirectory>dble/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
                <include>libwrapper-linux*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/dble/conf</directory>
            <outputDirectory>dble/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>dble/conf</outputDirectory>
            <excludes>
                <exclude>*.dtd</exclude>
                <exclude>log4j*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory>dble/</outputDirectory>
            <includes>
                <include>version.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/conf</directory>
            <outputDirectory>dble/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/bin</directory>
            <outputDirectory>dble/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>*.sh</include>
                <include>*.py</include>
                <include>custom_mysql_ha_logging.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/logs</directory>
            <outputDirectory>dble/logs</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
		 <fileSet>
            <directory>${basedir}/algorithm</directory>
            <outputDirectory>dble/algorithm</outputDirectory>
        </fileSet>
    </fileSets>

</assembly>
